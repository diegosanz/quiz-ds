<form action="/quizes" method="get">
	<input  id="search" name="search" placeholder="Filtrar preguntas" type="search"/>
	<button type="submit">Filtrar</button>
</form>
<table class="question-list">
	<% var i; for (i=0; i < quizes.length; i++) { %>
		<tr>
			<td>
				<a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a>
			</td>
			<td>
				<a href="quizes/<%= quizes[i].id %>/edit">
					<button>editar</button>
				</a>
			</td>
			<td>
				<form action="quizes/<%= quizes[i].id %>?_method=delete" method="post">
					<button onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');" type="submit">
						borrar
					</button>
				</form>
			</td>
		</tr>
	<% } %>
</table>
<a href="/quizes/new">
	<button type="button">Crear pregunta</button>
</a>
